<h1><%= @train.name %></h1>

<% if @trains.any?() %>
  <ol>
    <% @trains.each() do |stop| %>
    <li>
      <ul>
        <li>City: <%= stop.city %>, Arrives at: <%= stop.arrival %></a></li>
      </ul>
    </li>
    <% end %>
  </ol>

  <% else %>
  <p> No stops. Dawg</p>
  <% end %>

  <form action="/train/<%= @train.id %>" method= "post">
    <div class="form-group">
      <label class="form-label" for="city">City</label>
      <input class="form-control" name="city" id="city" type="text">
    </div>
    <div class="form-group">
      <label class="form-label" for="time">Arrival time</label>
      <input class="form-control" name="time" id="time" type="time">
    </div>
    <button type="submit" class="btn btn-success"> Add route </button>
  </form>

