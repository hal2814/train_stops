<h1><%= @city.name %></h1>

<% if @cities.any?() %>
  <ol>
    <% @cities.each() do |stop| %>
    <li>
      <ul>
        <li> <a href="/stops/<%=stop.id%>">Train: <%= stop.train %>, Arrives at: <%= stop.arrival %></a></li>
      </ul>
    </li>
    <% end %>
  </ol>

  <% else %>
  <p> No stops. Dawg</p>
  <% end %>

<h3>Add another stop</h3>

<form action="/city/<%= @city.id %>" method= "post">
  <div class="form-group">
    <label class="form-label" for="train">Train</label>
    <input class="form-control" name="train" id="train" type="text">
  </div>
  <div class="form-group">
    <label class="form-label" for="time">Arrival time</label>
    <input class="form-control" name="time" id="time" type="time">
  </div>
  <button type="submit" class="btn btn-success"> Add route </button>
</form>

